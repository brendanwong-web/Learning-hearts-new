---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const { content, author, role } = Astro.props;

interface Props {
  content: string;
  author: string;
  role: string;
}
---

<blockquote class="relative">
  <Icon name="mingcute:quote-left-fill" size="40" class="absolute start-0 top-0 h-16 w-16 -translate-x-6 -translate-y-8 transform text-neutral-300 dark:text-neutral-700"/>

  <div class="relative z-10">
    <p class="text-xl italic text-neutral-800 dark:text-neutral-200">
      {content}
    </p>
  </div>

  <div class="mt-6">
    <div class="flex items-center">
      <div class="ms-4 grow">
        <div class="font-bold text-neutral-800 dark:text-neutral-200">
          {author}
        </div>
        <div class="text-xs text-neutral-500">{role}</div>
      </div>
    </div>
  </div>
</blockquote>
