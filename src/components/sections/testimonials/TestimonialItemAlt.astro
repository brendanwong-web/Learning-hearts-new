---
import { Image } from "astro:assets";
import {Icon} from 'astro-icon/components'
import { capitalize } from "@/utils/utils";
import Collapse from "../misc/Collapse.astro";
const { name, date, svg, index, typeOf="Therapy" } = Astro.props;

interface Props {
  name: string;
  date: string;
  svg: string;
  index: number;
  typeOf?: string;
}
---


<div class="flex h-auto">
  <div class="flex flex-col border-1 border-neutral-200 text-pretty relative align-baseline bg-neutral-100 rounded-lg dark:bg-neutral-900 text-neutral-800 dark:text-neutral-200">
    
    <!-- <div class="text-sm absolute top-0 w-full text-center p-2 text-neutral-600">
      {index}
    </div> -->
    <div class="p-2 items-baseline px-4 md:px-6  bg-neutral-200 rounded-tr-lg rounded-tl-lg shadow-xs w-full mx-auto dark:bg-neutral-800">
      <div class="flex items-center lg:gap-x-3">
        
      
        <div class="shrink-0 flex justify-center">
          <Icon name={svg} width="20" height="24" class="text-lht-old/90 mr-4 self-end"/>
          <p class="text-sm self-center font-semibold text-neutral-800 dark:text-neutral-200 mr-4">
            {name}
          </p>
        </div>
        <div class="grow flex items-baseline justify-end">
          <p class="text-sm text-gray-600 dark:text-neutral-400">
            {capitalize(typeOf)} | {date}
          </p>
        </div>
      </div>
    </div>
    <div class="flex-auto p-4 md:p-6 space-y-4">
      <slot />
    </div>

    
  </div>
</div>

